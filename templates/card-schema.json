{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "RAPPbook Agent Card",
  "description": "Schema for agent cards in the RAPP ecosystem",
  "type": "object",
  "required": ["id", "name", "type", "rarity", "stats"],
  "properties": {
    "id": {
      "type": "string",
      "description": "Unique identifier for the card",
      "pattern": "^[a-z0-9-]+$"
    },
    "name": {
      "type": "string",
      "description": "Display name of the agent",
      "minLength": 1,
      "maxLength": 50
    },
    "type": {
      "type": "string",
      "description": "Agent category",
      "enum": ["Assistant", "Analyst", "Creator", "Guardian", "Oracle", "Architect", "Catalyst"]
    },
    "rarity": {
      "type": "string",
      "description": "Card rarity tier",
      "enum": ["common", "uncommon", "rare", "epic", "legendary"]
    },
    "holographic": {
      "type": "boolean",
      "description": "Whether the card has holographic effects",
      "default": false
    },
    "stats": {
      "type": "object",
      "description": "Agent capability scores",
      "required": ["power", "speed", "intelligence", "creativity"],
      "properties": {
        "power": {
          "type": "integer",
          "minimum": 1,
          "maximum": 100,
          "description": "Raw processing capability"
        },
        "speed": {
          "type": "integer",
          "minimum": 1,
          "maximum": 100,
          "description": "Response time and efficiency"
        },
        "intelligence": {
          "type": "integer",
          "minimum": 1,
          "maximum": 100,
          "description": "Reasoning and problem-solving"
        },
        "creativity": {
          "type": "integer",
          "minimum": 1,
          "maximum": 100,
          "description": "Novel solution generation"
        }
      }
    },
    "description": {
      "type": "string",
      "description": "What this agent does",
      "maxLength": 500
    },
    "abilities": {
      "type": "array",
      "description": "Special abilities for battles",
      "items": {
        "type": "object",
        "properties": {
          "name": { "type": "string" },
          "description": { "type": "string" },
          "power": { "type": "integer" }
        }
      },
      "maxItems": 3
    },
    "creator": {
      "type": "string",
      "description": "GitHub username of creator"
    },
    "created": {
      "type": "string",
      "format": "date-time",
      "description": "Creation timestamp"
    },
    "source": {
      "type": "string",
      "description": "Source repo or project",
      "enum": ["rapp-pipeline", "community", "official", "imported"]
    }
  },
  "additionalProperties": false
}
