{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "RAPPverse World Configuration",
  "description": "Schema for world configurations in RAPPverse",
  "type": "object",
  "required": ["id", "name", "settings", "spawn"],
  "properties": {
    "id": {
      "type": "string",
      "description": "Unique world identifier",
      "pattern": "^[a-z0-9-]+$"
    },
    "name": {
      "type": "string",
      "description": "Display name of the world"
    },
    "description": {
      "type": "string",
      "description": "World description"
    },
    "version": {
      "type": "string",
      "description": "World version",
      "default": "1.0.0"
    },
    "author": {
      "type": "string",
      "description": "World creator"
    },
    "settings": {
      "type": "object",
      "properties": {
        "maxPlayers": {
          "type": "integer",
          "minimum": 1,
          "maximum": 100,
          "default": 50
        },
        "gridSize": {
          "type": "integer",
          "minimum": 10,
          "maximum": 100,
          "default": 20
        },
        "skyColor": {
          "type": "string",
          "pattern": "^#[0-9a-fA-F]{6}$",
          "default": "#1a1a2e"
        },
        "floorColor": {
          "type": "string",
          "pattern": "^#[0-9a-fA-F]{6}$",
          "default": "#16213e"
        },
        "ambientLight": {
          "type": "number",
          "minimum": 0,
          "maximum": 1,
          "default": 0.3
        },
        "fogDensity": {
          "type": "number",
          "minimum": 0,
          "maximum": 0.1,
          "default": 0.02
        }
      }
    },
    "spawn": {
      "type": "object",
      "description": "Player spawn point",
      "properties": {
        "x": { "type": "number", "default": 0 },
        "y": { "type": "number", "default": 0 },
        "z": { "type": "number", "default": 0 }
      }
    },
    "features": {
      "type": "object",
      "properties": {
        "chat": { "type": "boolean", "default": true },
        "voice": { "type": "boolean", "default": false },
        "agents": { "type": "boolean", "default": true },
        "browser": { "type": "boolean", "default": true },
        "trading": { "type": "boolean", "default": false },
        "battles": { "type": "boolean", "default": false }
      }
    },
    "theme": {
      "type": "string",
      "enum": ["hub", "arena", "gallery", "marketplace", "cyberpunk", "nature", "custom"],
      "default": "custom"
    },
    "music": {
      "type": "string",
      "description": "Background music URL (optional)"
    },
    "encrypted": {
      "type": "boolean",
      "description": "Whether world requires passcode",
      "default": false
    }
  }
}
